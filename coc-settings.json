{
  "languageserver": {
    "puppet": {
      "command": "ruby",
      "args": [
        "/home/gabster/.local/lib/vimspector/gadgets/linux/puppet-editor-services/puppet-languageserver",
        "--stdio",
        "--puppet-settings=--modulepath,~/dev/puppet"
      ],
      "filetypes": [
        "puppet",
        "epuppet"
      ],
      "rootPatterns": [
        ".git/",
        "metadata.json",
        "manifests/"
      ]
    }
  },
  "python.pythonPath": "python3",
  "coc.preferences.formatOnSave": true,
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "pyright.organizeimports.provider": "ruff",
  "pyright.testing.provider": "pytest",
  "workspace.ignoredFolders": [
    "$HOME",
    "$HOME/.cargo/**",
    "$HOME/.rustup/**"
  ],
  "vimlsp.suggest.fromRuntimepath": true,
  "diagnostic-languageserver.linters": {
    "vintstyle": {
      "command": "vint",
      "debounce": 100,
      "args": [
        "--warning",
        "--enable-neovim",
        "--style",
        "-"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "vint",
      "formatLines": 1,
      "formatPattern": [
        "[^:]+:(\\d+):(\\d+):\\s*(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "message": 3
        }
      ]
    }
  },
  "diagnostic-languageserver.filetypes": {
    "vim": "vintstyle"
  },
  "terminal.REPLMappings": {
    "python": "ipython3",
    "ruby": "irb"
  },
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "snippets.ultisnips.pythonPrompt": false
}
